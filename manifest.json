{
  "manifest_version": 2,

  "name": "UI Project",
  "description": "Web annotation and mouse gesture control",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "WebAnn"
  },
  
  "content_scripts" :[
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [ "css/font-awesome.min.css","css/note.css"],
      "js": ["js/jspdf.js", "js/note.js", "js/FileSaver.min.js"],
      "run_at" : "document_end"
    }
    
  ],

  "background": {
    "scripts" : ["background.js"]
  },
  
  "permissions": [
    "activeTab",
	"tabs",
	"storage",
	"http://*/*", "https://*/*",
    "https://ajax.googleapis.com/"
  ],

   "web_accessible_resources": [
    "fonts/*"
  ],
  "content_security_policy": "default-src *; script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'; font-src 'self' 'unsafe-inline' 'unsafe-eval'"
}
